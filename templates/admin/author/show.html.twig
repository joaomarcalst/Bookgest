{% extends 'base.html.twig' %}
{% block title %}Fiche de l'auteur
{% endblock %}
{% block body %}
<div class="d-flex justify-content-center mt-4">
    <div class="col-md-8">
        <div class="example-wrapper">
            <h1>Auteur :</h1>
            {% if author is not null %}
                <div class="card mb-1">
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <h4 class="mb-1">{{ author.name }}</h4>
                            <small class="text-muted">Identifiant : {{ author.id }}</small>
                        </div>
                        <div class="d-flex justify-content-between card-text">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Date de naissance : {{ author.dateOfBirth ? author.dateOfBirth|date('d/m/Y') : 'Non renseignée' }}</li>
                                <li class="list-group-item">Date de décès : {{ author.dateOfDeath ? author.dateOfDeath|date('d/m/Y') : 'Toujours vivant' }}</li>
                            </ul>
                            <p><small>Nationalité : {{ author.nationality ?: 'Non renseignée' }}</small></p>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_admin_authorapp_admin_author_index') }}" class="btn btn-secondary">Retour</a>
                </div>
            {% else %}
                <div>Auteur non trouvé</div>
                <div class="mt-3">
                    <a href="{{ path('app_admin_authorapp_admin_author_index') }}" class="btn btn-secondary">Retour</a>
                </div>
            {% endif %}
        </div>
        <br/>
    </div>
</div>
{% endblock %}